{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@domains/*": ["src/domains/*"]
    },
    "typeRoots": ["node_modules/@types", "./src/core/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
